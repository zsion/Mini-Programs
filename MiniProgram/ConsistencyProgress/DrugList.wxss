/* ConsistencyProgress//DrugList.wxss */
@import "/common/public.wxss";
Page{
  margin:0;
  padding:0;
  background: #fff;
}
.list-wrap{
  width:100%;
  position: absolute;
  top:80rpx;
  left:0;
  z-index: 1;
}
.progress-part{
  font-family: PingFangSC-Medium;
  background: #F5F5F8;
  border-radius: 5rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.progress-head{
  line-height: 40rpx;
  padding:15rpx;
  font-size: 28rpx;
  color: #525E69;
  font-weight:bold;
}
.progress-body{
  padding:0 15rpx 0 15rpx;
}
.progress-body view label{
  font-size: 24rpx;
  color: #79828A;
  line-height: 45rpx;
  display: block;
}
.progress-body view navigator{
  font-size: 32rpx;
  color: #2E8EFF;
  line-height: 45rpx;
}
.progress-body view view.zero {
  color: #B5BFC8;
}
.toogle-head{
  margin:15rpx 15rpx 0 15rpx;
  border-top:1rpx solid #E7E7E7;
}
.toogle-head view{
  line-height:70rpx;
  font-size: 24rpx;
  color: #525E69;
}
.icon-open{
  top:-7.5rpx;
  left:-7.5rpx;
  transition-duration: .5s;
  -moz-transition-duration: .5s; /* Firefox 4 */
  -webkit-transition-duration: .5s; /* Safari 和 Chrome */
  -o-transition-duration: .5s; /* Opera */
  transform:rotate(180deg);
  -ms-transform:rotate(180deg); /* Internet Explorer */
  -moz-transform:rotate(180deg); /* Firefox */
  -webkit-transform:rotate(180deg); /* Safari 和 Chrome */
  -o-transform:rotate(180deg); /* Opera */
}
.icon-close-toggle{
  width: 0;
  height: 0;
  border: 15rpx solid;
  border-color:  #5C6376 transparent transparent transparent;
  border-radius:7rpx;
  position: relative;
  bottom:-7.5rpx;
  left:-7.5rpx;
  transition-duration: .5s;
  -moz-transition-duration: .5s; /* Firefox 4 */
  -webkit-transition-duration: .5s; /* Safari 和 Chrome */
  -o-transition-duration: .5s; /* Opera */
}
.icon-close-toggle::after{
  content: '';
  position: absolute;
  top: -20rpx;
  left: -15rpx;
  border: 15rpx solid;
  border-color: #F5F5F8 transparent transparent transparent;
}
.toogle-body{
  background: #F5F5F8;
  border-radius: 5rpx;
  padding-bottom: 15rpx;
  animation-name: fadeIn;
  animation-duration: .5s;
}
.toogle-dosage{
  margin: 0 15rpx 0 15rpx;
}
.dosage-con view{
  width:20%;
  text-align: center;
  line-height: 45rpx;
  margin:5rpx 0 5rpx 0;
}
.dosage-con view:nth-child(1){
  width:170rpx;
  white-space:nowrap;
  background: transparent;
  font-size: 24rpx;
  color: #525E69;
  line-height: 30rpx;
  font-weight: bold;
  text-align: left;
}
.dosage-con view label{
  font-size: 24rpx;
  color: #79828A;
}
.dosage-con view navigator{
  font-size: 26rpx;
  color: #2E8EFF;
  font-weight: bold;
}
.dosage-con view label.zero{
  font-size: 26rpx;
  color: #B5BFC8;
  font-weight: bold;
}

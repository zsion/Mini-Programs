/* comments/conditions.wxss */
@import "/app.wxss";
@import "/common/list.wxss";
.swiper-tab {
  position:fixed;
  top:0;
  z-index:3;
  width: 100%;
  height:80rpx;
  margin:auto;
  display: flex;
  justify-content:space-between;
  background: #fff;
  border-bottom:1rpx solid #F6F6F7;
}
.swiper-tab-list {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight:bold;
  color: #B1B1B1;
}
.on {
  color: #00BEEE;
  height:80rpx;
  line-height: 80rpx;
}
.arrow{
  width:0;
  height:0;
  border-left:10rpx solid transparent;
  border-right:10rpx solid transparent;
  border-top:15rpx solid #B1B1B1;
  transition-duration: .5s;
  -moz-transition-duration: .5s; /* Firefox 4 */
  -webkit-transition-duration: .5s; /* Safari 和 Chrome */
  -o-transition-duration: .5s; /* Opera */
}
.rorate{
  border-top:15rpx solid #00BEEE;
  transform:rotate(180deg);
  -ms-transform:rotate(180deg); /* Internet Explorer */
  -moz-transform:rotate(180deg); /* Firefox */
  -webkit-transform:rotate(180deg); /* Safari 和 Chrome */
  -o-transform:rotate(180deg); /* Opera */
}
.content{
  position: absolute;
  top: 80rpx;
  z-index: 3;
  width:100%;
  background: #fff;
  border-top:1rpx solid #F6F6F7;
}
.changebg{
  background: rgba(0,0,0,0.5);
}
.cell-sort{
  width:15px;
  height:18.75rpx;
}
/* ListedDrugs/list.wxss */
@import "/app.wxss";
@import "/common/list.wxss";

/* 下面是tobar */
.swiper-tab {
  position:fixed;top:0;z-index:3;
  width: 100%;
  height:80rpx;
  margin:auto;
  display: flex;
  justify-content:space-between;
  background: #fff;
  border-bottom:1rpx solid #F6F6F7;
}
.swiper-tab view{
  width:25%;
}
.swiper-tab-list {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight:bold;
  color: #B1B1B1;
} 
.on {
  color: #00BEEE;
  height:80rpx;
  line-height: 80rpx;
}
.arrow{
  width:0;
  height:0;
  border-left:10rpx solid transparent;
  border-right:10rpx solid transparent;
  border-top:15rpx solid #B1B1B1;
  transition-duration: .5s;
  -moz-transition-duration: .5s; /* Firefox 4 */
  -webkit-transition-duration: .5s; /* Safari 和 Chrome */
  -o-transition-duration: .5s; /* Opera */
}
.rorate{
  border-top:15rpx solid #00BEEE;
  transform:rotate(180deg);
  -ms-transform:rotate(180deg); /* Internet Explorer */
  -moz-transform:rotate(180deg); /* Firefox */
  -webkit-transform:rotate(180deg); /* Safari 和 Chrome */
  -o-transform:rotate(180deg); /* Opera */
}

.content{
  position: absolute;
  top: 80rpx;
  z-index: 3;
  width:100%;
  background: #fff;
  border-top:1rpx solid #F6F6F7;
}

.add-bg{
  background: rgba(0,0,0,0.5);
}

.add-bg-bg{
  width:100%;
  background: #fff;
}

.add-bg-bg view.select-list >view:last-child{
  padding-bottom: 25rpx;
}

.slide-bar{
  position: fixed;
  top:80rpx;
  left:0;
  width:200rpx;
  background: #fff;
  border-right:1rpx solid #F6F6F7;

}
.slide-bar view{
  text-align: center;
  height:80rpx;
  line-height: 80rpx;
  font-size:28rpx;
  color:#626A71;
  font-weight:bold;
}
.slide-bar view.active{
  background: #F6F6F7;
  -moz-box-shadow:10rpx 0 0 #00BEEE inset;
	-webkit-box-shadow:10rpx 0 0 #00BEEE inset;
	box-shadow:10rpx 0 0 #00BEEE inset;
}
.content-list{
  position: absolute;
  top:80rpx;
  z-index: 1;
  background:#F6F6F7;
}

.small-tips{
  line-height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color:#FF9F89;
}
.small-tips image{
  width:25rpx;
  height:24rpx;
  margin-right: 5rpx;
}



/* page/pages/bar/bar.wxss */
.bar-head{
  width:100%;
  height:35px;
  background: #fff;
  border-bottom: 1px solid #E1EDEE;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.bar-head text:first-child{
  background: #00B1E0;
  color:#00B1E0;
  line-height: 35px;
  margin:0 10rpx 0 25rpx;
}
.bar-head text:last-child{
  line-height: 35px;
  font-size: 30rpx;
  color:#31363B;
  font-weight: bold;
}
.part-one{
  margin-top: 15rpx;
}
.tab-head{
  display: flex;
  justify-content: space-around;
  width: 94%;
  margin:auto;
  text-align: center;
  height:70rpx;
  background-color:white;
  border: 1px solid #E1EDEE;
  border-radius: 10rpx;
}
.tab-head view{
  text-align: center;
  width:50%;
  font-size: 30rpx;
  height:70rpx;
  line-height: 70rpx;
  font-weight: bold;
}

.tab-head .active text{
  color: #00B9E7;
  border-bottom: 4rpx solid #00B9E7;
}
.sub-wrap{
  width:94%;
  margin:auto;
  height:50rpx;
  display: flex;
  justify-content:flex-end;
}
.sub-head{
  width:215rpx;
  height:50rpx;
  line-height: 50rpx;
  display: flex;
  align-items: center;
  justify-content:flex-end;
}
.sub-head image{
  width:20rpx;
  height:13.33rpx;
  margin-right: 5rpx;
}
.sub-head text{
  font-size: 24rpx;
  text-align: right;
  color:#A2A8A8;
}

.tab-body .body-item{display: none}
.tab-body .body-item.active{display: block}

.add-eval{
  line-height: 70rpx;
  color:#E8E8E8;
}

.part-two{
  background: #F6F6F7;
}
.tooltip{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 94%;
  margin:auto;
  line-height: 50rpx;
  background-color:white;
  border: 1px solid #E1EDEE;
  border-radius: 10rpx;
  font-size: 24rpx;
  color:#A2A8A8;
}
.tooltip image{
  width:35rpx;
  height:29.14rpx;
  margin:0 10rpx 0 10rpx;
}

.tel{
  display: flex;
  justify-content: space-around;
  color:#00BEEE;
}

.apply view{
  width:300rpx;
  height:70rpx;
  line-height:70rpx;
  margin:auto;
  margin-top:30rpx;
  text-align:center;
  background:#00BEEE;
  font-size:30rpx;
  color:#fff;
}



